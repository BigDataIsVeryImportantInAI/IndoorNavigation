<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    android:versionCode="1"
    android:versionName="1.0" package="com.sss8000">

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="com.sss8000.beaconNActivities.IntroActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.sss8000.beaconNActivities.MainActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name="com.sss8000.beaconNActivities.BeaconInfoActivity" >
        </activity>
        <activity android:name="com.sss8000.beaconNActivities.BeaconSignal" >
        </activity>
        <activity
            android:name="com.sss8000.beaconNActivities.CalibrateDialog"
            android:label="@string/title_activity_calibrate_dialog" >
        </activity>
        <activity
            android:name="com.sss8000.beaconNActivities.NaviActivity"
            android:label="@string/title_activity_navi" >
        </activity>
        <activity
            android:name="com.sss8000.beaconNActivities.DestsetActivity"
            android:label="@string/title_activity_destset" >
        </activity>
        <activity
            android:name="com.sss8000.beaconNActivities.FirstActivity"
            android:label="@string/title_activity_first" >
        </activity>
<!--         <activity
            android:name=".IntroActivity"
            android:label="@string/title_activity_intro" >
        </activity> -->
        <activity android:name=".beaconNActivities.GroupMenuActivity"></activity>
        <activity android:name=".beaconNActivities.GroupActivity"></activity>
    </application>

</manifest>
